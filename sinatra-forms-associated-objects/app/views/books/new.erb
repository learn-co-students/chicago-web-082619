<h1>Create a new book</h1>
<form action="/books" method="POST">
  <label>Title:</label>
  <input type="text" name="title">
  <label>Snippet:</label>
  <input type="text" name="snippet">
  <select name="author_id" id="">
    <% @authors.each do |author| %>
      <option value="<%=author.id%>"><%=author.name%></option>
    <% end %>
  </select>
  <input type="submit">
</form>
