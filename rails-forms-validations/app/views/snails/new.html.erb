<% if flash[:errors] %>
  <% flash[:errors].each do |e| %>
    <p><%= e %></p>
  <% end %>
<% end %>
<%= form_with model: @snail do |f| %>
  <%= f.label "Snail Name" %>
  <%= f.text_field :name %>
  <%= f.label "Snail Breed" %>
  <%= f.text_field :breed %>
  <%= f.label "Shell size" %>
  <%= f.text_field :shell_size %>
  <%= f.submit "Snailmit" %>
<% end %>
